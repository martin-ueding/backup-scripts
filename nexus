#!/bin/bash
# Copyright © 2013 Martin Ueding <dev@martin-ueding.de>

set -e
set -u

shopt -s nullglob
shopt -s extglob

###############################################################################
#                                   options                                   #
###############################################################################

ip="192.168.100.106"
port="2222"
target="$ip:/sdcard"
target_music="$target/Music"
target_pdf="$target/PDF"

dropfolder="$HOME/TODO"

pdfdirs=(

"$HOME/Dokumente/2012-LaTeX_Kurs"
"$HOME/Dokumente/Anleitungen"
"$HOME/Dokumente/Informationen"
"$HOME/Dokumente/Nachhilfe"
"$HOME/Dokumente/Physik_Dokumente"
"$HOME/Dokumente/Spektrum"
"$HOME/Dokumente/Studium/"Modulhandbuch_*.pdf
"$HOME/Dokumente/Studium/EBooks"
"$HOME/Dokumente/Studium/math340"
"$HOME/Dokumente/Studium/physik312"
"$HOME/Dokumente/Studium/physik321"

)

###############################################################################
#                                   program                                   #
###############################################################################

myrsync() {
	rsync --rsh="ssh -p $port" --progress -hlmrv --delete --size-only --ignore-errors "$@"
}

copypdf() {
	local from="$1"
	local frombase="${from#/home/*/}"
	local target="$target_pdf/${frombase%/*}"

	echo "${cyan}Folder $from to $target${reset}"

	myrsync --include='*.pdf' --include='*/' --exclude='*' "$from" "$target/"

	echo
}

printheading() {
	echo
	echo "${green}$1${reset}"
	echo
}

if [[ -x /usr/bin/tput ]] && tput setaf 1 >&/dev/null
then
	bold="$(tput bold)"

	black="$(tput setaf 0)"
	blue="$(tput setaf 4)"
	cyan="$(tput setaf 6)"
	green="$(tput setaf 2)"
	orange="$(tput setaf 3)"
	purple="$(tput setaf 5)"
	red="$(tput setaf 1)"
	white="$(tput setaf 7)"

	reset="$(tput sgr0)"
else
	bold=

	black=
	blue=
	cyan=
	green=
	orange=
	purple=
	red=
	white=

	reset=
fi

###############################################################################
#                                program title                                #
###############################################################################

cat <<EOF
│╲   │  ┌──  ${blue}╲  ${red}╱${reset}  │   │  ╱──
│ ╲  │  │__   ${blue}╲${red}╱${reset}   │   │  ╲__
│  ╲ │  │     ${orange}╱${green}╲${reset}   │   │     ╲
│   ╲│  └── ${orange} ╱  ${green}╲${reset}  └───┘   __╱
EOF

###############################################################################
#                               copy PDF files                                #
###############################################################################

printheading "copying PDF files to Nexus"

for pdfdir in "${pdfdirs[@]}"
do
	copypdf "$pdfdir"
done

###############################################################################
#                     move camera images to the computer                      #
###############################################################################

printheading "mode taken pictures to computer"

myrsync "$target/DCIM/Camera/" "$dropfolder"
ssh -p 2222 "$ip" "rm -v /sdcard/DCIM/Camera/*"

###############################################################################
#                     move download items to the computer                     #
###############################################################################

printheading "move downloaded items to computer"

myrsync "$target/Download/" "$dropfolder"
ssh -p 2222 "$ip" "rm -rv /sdcard/Download/*"

###############################################################################
#                               copy MP3 files                                #
###############################################################################

printheading "Copying MP3 files to Nexus"

mp3-packer "$HOME/Musik/Musik/"

myrsync --max-size 15M \
	--force --exclude-from "/home/mu/.config/syncscripts/handy_musik.txt" \
	"/home/mu/.cache/mp3_packer/128/home/mu/Musik/Musik/" "$target_music/"

###############################################################################
#                            update backup-status                             #
###############################################################################

backup-status update "$target"
